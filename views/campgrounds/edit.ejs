<% include ../partials/header %>

<% let { name, image, description, comments, _id, author: { username } } = campground %>

<div class='container'>

    <div class='row justify-content-center'>
        <div class='col-lg-6 col-md-8 col-sm-10'>
            <div class='container d-flex align-items-center' style='height: 90px;'>
                <h2 >Edit Campground <%= name %></h2>
            </div>
            <form action='/campgrounds/<%= _id %>?_method=PUT' method='POST'>
                
                <div class='form-group'>
                    <input name='campground[name]' type='text' value='<%= name %>' placeholder='Place name' class='form-control' />
                </div>
                
                <div class='form-group'>
                   <input name='campground[image]' type='text' value='<%= image %>' placeholder='Image url' class='form-control' />
                 </div>
                 
                <div class='form-group'>
                   <input name='campground[description]' type='text' value='<%= description %>' placeholder='Place description' class='form-control' />
                 </div>
                  
                <div class='form-group'>
                    <button class='btn btn-outline-primary'>Submit</button>
                    <a href='/campgrounds/<%= _id %>' class='btn btn-outline-danger'>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>