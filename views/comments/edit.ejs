<% include ../partials/header %>


<div class='container'>

    <div class='row justify-content-center'>
        <div class='col-lg-6 col-md-8 col-sm-10'>
            <div class='container d-flex align-items-center' style='height: 90px;'>
                <h2 >Edit Comment</h2>
            </div>
            <form action='/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT' method='POST'>
                
                <div class='form-group'>
                   <input name='comment[text]' type='text' value='<%= comment.text %>' class='form-control' />
                 </div>

                  
                <div class='form-group'>
                    <button class='btn btn-outline-primary'>Submit</button>
                    <a href='/campgrounds/<%= campground._id %>' class='btn btn-outline-danger'>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>